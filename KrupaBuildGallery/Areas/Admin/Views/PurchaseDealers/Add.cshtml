                                @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Enter 1st Bank Name", maxlength = "100" } })

                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.BankAcNumber, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                                @Html.EditorFor(model => model.BankAcNumber, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Enter 1st Bank A/c Number", maxlength = "20" } })

