                                @Html.ValidationMessageFor(model => model.OwnerContactNo, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.FirmCity, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
