                                @Html.EditorFor(model => model.BankAcNumber2, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Enter 2nd Bank A/c Number", maxlength = "20" } })

                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.BankAcNumber2, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.BankBranch2, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                                @Html.EditorFor(model => model.BankBranch2, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Enter 2nd Bank Branch", maxlength = "100" } })

                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.BankBranch2, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.IFSCCode2, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                                @Html.EditorFor(model => model.IFSCCode2, new { htmlAttributes = new { @class = "form-control col-md-8 uppercase", @placeholder = "Enter 2nd Bank IFSC Code", maxlength = "15" } })

                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.IFSCCode2, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.VisitingCardPhotoFile, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                                @Html.TextBoxFor(model => model.VisitingCardPhotoFile, new { type = "file", @class = "form-control col-md-8" })

                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.VisitingCardPhotoFile, "", new { @class = "text-danger" })
