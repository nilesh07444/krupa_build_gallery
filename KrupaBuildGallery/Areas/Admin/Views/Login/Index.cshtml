@using KrupaBuildGallery.ViewModel;
@model LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/Areas/Admin/Content/img/favicon.png">
    <title>Krupa Build Gallery</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Areas/Admin/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/style-responsive.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

    <script src="~/Areas/Admin/Content/js/jquery.js"></script>
    <script src="~/Areas/Admin/Content/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
</head>
<body class="login-body">
    <div class="container">
        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Krupa Build Gallery</h2>
            <div class="login-wrap">
                @if (@TempData["LoginError"] != null)
                {

                    <div class="alert alert-block alert-danger fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="fa fa-times"></i>
                        </button>
                        <strong>@TempData["LoginError"]</strong>
                    </div>
                }
                @*<input type="text" id="txtUserName" name="txtUserName" class="form-control" placeholder="User Name" autofocus>*@
                @Html.TextBoxFor(model => model.UserName, new { id = "txtUserName", name = "txtUserName", placeholder = "UserName", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @style = "color:red;" })

                @Html.PasswordFor(model => model.Password, new { id = "txtPassword", name = "txtPassword", placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red;" })

                @*<input id="txtPassword" name="txtPassword" type="password" class="form-control" placeholder="Password">*@
                <label class="checkbox">
                    <input type="checkbox" value="remember-me">Remember Me
                    @*<span class="pull-right">
                            <a data-toggle="modal" href="#myModal"> Forgot Password?</a>
                        </span>*@
                </label>
                <button id="cmdSubmit" class="btn btn-lg btn-login btn-block" type="submit">Login</button>
                @*<p>or you can sign in via social network</p>
                    <div class="login-social-link">
                        <a href="index.html" class="facebook">
                            <i class="fa fa-facebook"></i>
                            Facebook
                        </a>
                        <a href="index.html" class="twitter">
                            <i class="fa fa-twitter"></i>
                            Twitter
                        </a>
                    </div>
                    <div class="registration">
                        Don't have an account yet?
                        <a class="" href="registration.html">
                            Create an account
                        </a>
                    </div>*@
            </div>
            <!-- Modal -->
            @*<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Forgot Password ?</h4>
                            </div>
                            <div class="modal-body">
                                <p>Enter your e-mail address below to reset your password.</p>
                                <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                                <button class="btn btn-success" type="button">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>*@
            <!-- modal -->
        </form>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->

</body>
</html>

<script>

    //jQuery.blockUI({ message: "<h4>Please Wait...</h4>" });

</script>

<script>
    jQuery(document).ready(function () {
        jQuery.blockUI({ message: "<h4>Please Wait...</h4>" });
        jQuery("#cmdSubmit").click(function (event) {
            //event.preventDefault();
            if (jQuery("form").valid()) {
                jQuery.blockUI({ message: "<h4>Please Wait...</h4>" });
            }
        });
    });

    jQuery(window).on("load", function () {
        jQuery.unblockUI();
    });

</script>