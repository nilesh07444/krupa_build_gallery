@using KrupaBuildGallery.Model;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="krupa gallery">
    <link rel="icon" href="~/Content/assets/images/dashboard/fav.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/Content/assets/images/dashboard/fav.ico" type="image/x-icon">
    <title>Krupa Build Gallery</title>

    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Font Awesome-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/fontawesome.css">

    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/flag-icon.css">

    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/icofont.css">

    <!-- Prism css-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/prism.css">

    <!-- Chartist css -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/chartist.css">

    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap.css">

    <!-- Datatable css-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/datatables.css">

    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/admin.css">

    <!-- latest jquery-->
    <script src="~/Content/assets/js/jquery-3.3.1.min.js"></script>    
    <!-- Bootstrap js-->
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.js"></script>


</head>

<body>

    <!-- page-wrapper Start-->
    <div class="page-wrapper">

        <!-- Page Header Start-->
        <div class="page-main-header">
            <div class="main-header-right row">
                <div class="main-header-left d-lg-none">
                    <div class="logo-wrapper"><a href="/admin/dashboard"><img style="width: 80px; height: 50px;" class="blur-up lazyloaded" src="~/Content/assets/images/logos/krupalogo.jpeg" alt=""></a></div>
                </div>
                <div class="mobile-sidebar">
                    <div class="media-body text-right switch-sm">
                        <label class="switch"><a href="#"><i id="sidebar-toggle" data-feather="align-left"></i></a></label>
                    </div>
                </div>
                <div class="nav-right col">
                    <ul class="nav-menus">
                        <li>
                            <form class="form-inline search-form">
                                <div class="form-group">
                                    <input class="form-control-plaintext" type="search" placeholder="Search.."><span class="d-sm-none mobile-search"><i data-feather="search"></i></span>
                                </div>
                            </form>
                        </li>
                        <li><a class="text-dark" href="#!" onclick="javascript:toggleFullScreen()"><i data-feather="maximize-2"></i></a></li>

                        <li class="onhover-dropdown">
                            <i data-feather="bell"></i><span class="badge badge-pill badge-primary pull-right notification-badge">3</span><span class="dot"></span>
                            <ul class="notification-dropdown onhover-show-div p-0">
                                <li>Notification <span class="badge badge-pill badge-primary pull-right">3</span></li>
                                <li>
                                    <div class="media">
                                        <div class="media-body">
                                            <h6 class="mt-0"><span><i class="shopping-color" data-feather="shopping-bag"></i></span>Your order ready for Ship..!</h6>
                                            <p class="mb-0">Lorem ipsum dolor sit amet, consectetuer.</p>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="media">
                                        <div class="media-body">
                                            <h6 class="mt-0 txt-success"><span><i class="download-color font-success" data-feather="download"></i></span>Download Complete</h6>
                                            <p class="mb-0">Lorem ipsum dolor sit amet, consectetuer.</p>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="media">
                                        <div class="media-body">
                                            <h6 class="mt-0 txt-danger"><span><i class="alert-color font-danger" data-feather="alert-circle"></i></span>250 MB trash files</h6>
                                            <p class="mb-0">Lorem ipsum dolor sit amet, consectetuer.</p>
                                        </div>
                                    </div>
                                </li>
                                <li class="txt-dark"><a href="#">All</a> notification</li>
                            </ul>
                        </li>

                        <li class="onhover-dropdown">
                            <div class="media align-items-center">
                                @if (clsAdminSession.ImagePath != "")
                                {
                                    <img class="align-self-center pull-right img-50 rounded-circle blur-up lazyloaded" src="~/Images/UserPhoto/@clsAdminSession.ImagePath" alt="#">
                                }
                                else
                                {
                                    <img class="align-self-center pull-right img-50 rounded-circle blur-up lazyloaded" src="~/Images/default_user_image.png" alt="#">
                                }


                                <div class="dotted-animation"><span class="animate-circle"></span><span class="main-circle"></span></div>
                            </div>
                            <ul class="profile-dropdown onhover-show-div p-20 profile-dropdown-hover">
                                <li><a href="#"><i data-feather="user"></i>Edit Profile</a></li>
                                <li><a href="#"><i data-feather="lock"></i>Lock Screen</a></li>
                                <li><a href="#"><i data-feather="settings"></i>Settings</a></li>
                                <li><a href="/admin/login/signout"><i data-feather="log-out"></i>Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="d-lg-none mobile-toggle pull-right"><i data-feather="more-horizontal"></i></div>
                </div>
            </div>
        </div>
        <!-- Page Header Ends -->
        <!-- Page Body Start-->
        <div class="page-body-wrapper">

            <!-- Page Sidebar Start-->
            <div class="page-sidebar">
                <div class="main-header-left d-none d-lg-block">
                    <div class="logo-wrapper">
                        <a href="/admin/dashboard">
                            <img style="width: 200px; height: 70px; border-radius : 10px;" class="blur-up lazyloaded" src="~/Content/assets/images/logos/krupalogo.jpeg" alt="">
                        </a>
                    </div>
                </div>
                <div class="sidebar custom-scrollbar">
                    <div class="sidebar-user text-center">
                        <div>
                            @if (clsAdminSession.ImagePath != "")
                            {
                                <img class="img-60 rounded-circle lazyloaded blur-up" src="~/Images/UserPhoto/@clsAdminSession.ImagePath" alt="#">
                            }
                            else
                            {
                                <img class="img-60 rounded-circle lazyloaded blur-up" src="~/Images/default_user_image.png" alt="#">
                            }

                        </div>
                        <h6 class="mt-3 f-14">@clsAdminSession.UserName</h6>
                        @*<p>Project Manager</p>*@
                    </div>
                    <ul class="sidebar-menu">
                        <li><a class="sidebar-header" href="/admin/dashboard"><i data-feather="home"></i><span>Dashboard</span></a></li>
                        <li>
                            <a class="sidebar-header" href=""><i data-feather="lock"></i><span>Category</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/category/add"><i class="fa fa-circle"></i>Add New Category</a></li>
                                <li><a href="/admin/category"><i class="fa fa-circle"></i>Category List</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="sidebar-header" href=""><i data-feather="box"></i><span>Products</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/product/add"><i class="fa fa-circle"></i>Add New Product</a></li>
                                <li><a href="/admin/product"><i class="fa fa-circle"></i>Products List</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="sidebar-header" href=""><i data-feather="maximize-2"></i><span>Sub Products</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/subproduct/add"><i class="fa fa-circle"></i>Add New Sub Product</a></li>
                                <li><a href="/admin/subproduct"><i class="fa fa-circle"></i>Sub Product List</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="sidebar-header" href=""><i data-feather="download"></i><span>Product Items</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/productitem/add"><i class="fa fa-circle"></i>Add New Item</a></li>
                                <li><a href="/admin/productitem"><i class="fa fa-circle"></i>Items List</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="sidebar-header" href=""><i data-feather="archive"></i><span>Stock</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/stock/add"><i class="fa fa-circle"></i>Add New Stock</a></li>
                                <li><a href="/admin/stock"><i class="fa fa-circle"></i>Stock List</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="sidebar-header" href=""><i data-feather="dollar-sign"></i><span>Orders</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/order"><i class="fa fa-circle"></i>Orders List</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="sidebar-header" href=""><i data-feather="shopping-bag"></i><span>Offers</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/offer/add"><i class="fa fa-circle"></i>Add New Offer</a></li>
                                <li><a href="/admin/offer"><i class="fa fa-circle"></i>Offer List</a></li>
                            </ul>
                        </li>
                        <li>
                            <a class="sidebar-header" href=""><i data-feather="user-plus"></i><span>Users</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/distributor"><i class="fa fa-circle"></i>Distributor List</a></li>
                                <li><a href="/admin/customer"><i class="fa fa-circle"></i>Customer List</a></li>
                                <li><a href="/admin/distributor/requestlist"><i class="fa fa-circle"></i>Distributor Request List</a></li>
                            </ul>
                        </li>
                        <li>
                            <a class="sidebar-header" href=""><i data-feather="mail"></i><span>Contact Us Messages</span><i class="fa fa-angle-right pull-right"></i></a>
                            <ul class="sidebar-submenu">
                                <li><a href="/admin/contactusmessage"><i class="fa fa-circle"></i>Message List</a></li>                                                                
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
            <!-- Page Sidebar Ends-->


            <div class="page-body">

                @RenderBody()

            </div>

            <!-- footer start-->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 footer-copyright">
                            <p class="mb-0">Copyright 2019 © Krupa Build Gallery - All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- footer end-->
        </div>

    </div>
   
    <!-- feather icon js-->
    <script src="~/Content/assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="~/Content/assets/js/icons/feather-icon/feather-icon.js"></script>

    <!-- Sidebar jquery-->
    <script src="~/Content/assets/js/sidebar-menu.js"></script>

    <!--chartist js-->
    <script src="~/Content/assets/js/chart/chartist/chartist.js"></script>

    <!--chartjs js-->
    <script src="~/Content/assets/js/chart/chartjs/chart.min.js"></script>

    <!-- lazyload js-->
    <script src="~/Content/assets/js/lazysizes.min.js"></script>

    <!--copycode js-->
    <script src="~/Content/assets/js/prism/prism.min.js"></script>
    <script src="~/Content/assets/js/clipboard/clipboard.min.js"></script>
    <script src="~/Content/assets/js/custom-card/custom-card.js"></script>

    <!--counter js-->
    <script src="~/Content/assets/js/counter/jquery.waypoints.min.js"></script>
    <script src="~/Content/assets/js/counter/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/counter/counter-custom.js"></script>

    <!--height equal js-->
    <script src="~/Content/assets/js/height-equal.js"></script>

    <!-- lazyload js-->
    <script src="~/Content/assets/js/lazysizes.min.js"></script>

    <!--script admin-->
    <script src="~/Content/assets/js/admin-script.js"></script>


    <!-- Datatables js-->
    <script src="~/Content/assets/js/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/js/datatables/custom-basic.js"></script>

    <!-- BlockUI js-->
    <script src="~/Scripts/jquery.blockUI.js"></script>

    <script>

        function StartLoading() {
            jQuery.blockUI({ message: "<h4>Please Wait...</h4>" });
        }

        function StopLoading() {
            jQuery.unblockUI();
        }

    </script>

</body>
</html>
