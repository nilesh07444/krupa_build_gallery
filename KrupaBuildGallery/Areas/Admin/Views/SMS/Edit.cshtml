@model SMSContentVM

@{
    ViewBag.Title = "SMSContent";
}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <div class="page-header-left">
                        <h3>
                            Edit SMS
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/admin/sms">SMS</a></li>
                        <li class="breadcrumb-item active">Edit SMS</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">

                    <div class="card-header">
                        <h5>Edit SMS</h5>
                    </div>

                    <div class="card-body">
                        @using (Html.BeginForm("Edit", "SMS", FormMethod.Post, new { @id = "SMSContentFormId", @class = "needs-validation", enctype = "multipart/form-data", role = "form" }))
                        {

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                              
                            <div class="form-group row">
                                @Html.LabelFor(model => model.SMSTitle, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                                @Html.EditorFor(model => model.SMSTitle, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Enter SMS Title", maxlength = "100" } })

                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.SMSTitle, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.SMSDescription, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                                @Html.TextAreaFor(model => model.SMSDescription, 10, 0, htmlAttributes: new { @class = "form-control col-md-8" })


                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.SMSDescription, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.SeqNo, htmlAttributes: new { @class = "col-xl-3 col-md-4" })
                                @Html.EditorFor(model => model.SeqNo, new { htmlAttributes = new { @class = "form-control col-md-8", @placeholder = "Enter Sequence No", maxlength = "10" } })

                                <lable class="col-xl-3 col-md-4"></lable>
                                @Html.ValidationMessageFor(model => model.SeqNo, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group row">
                                @Html.HiddenFor(x => x.SMSContentId)
                                <lable class="col-xl-3 col-md-4"></lable>
                                <button type="submit" class="btn btn-primary" style="margin-right:10px;">Submit</button>
                                <button type="button" class="btn btn-danger" id="btnCancel">Cancel</button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

<script src="~/Content/assets/js/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(document).on("click", "#btnCancel", function () {
        window.location.href = "/admin/sms";
    });
</script>