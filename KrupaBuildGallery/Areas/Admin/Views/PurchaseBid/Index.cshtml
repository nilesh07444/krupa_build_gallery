    function fnDeleteBid(cat_id)
    {
         jQuery("#hdnDeleteCategory").val(cat_id);
         $('#deleteCategoryModal').modal('show');
    }

    function CloseBid(cat_id) {
        jQuery("#hdnDeletebid").val(cat_id);
        $('#closebidModal').modal('show');
    }

    function changestatus() {
        var statusid = $("#selectstatus").val();
        location.href = "/admin/purchasebid?Status=" + statusid;
    }

