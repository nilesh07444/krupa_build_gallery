@using KrupaBuildGallery.Helper;
@using Newtonsoft.Json;
@using KrupaBuildGallery.Model;

@model List<BidVM>
@{
    ViewBag.Title = "Bid List";

    int counter = 1;
}


<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            Bid List
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Purchase Bid</li>
                        <li class="breadcrumb-item active">Bid List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5>Bid List</h5>
            </div>
            <div class="card-body vendor-table">
                <div class="btn-popup pull-right">
                    <button type="button" class="btn btn-primary" id="btnAdd">Add New Bid</button>
                </div>
                <h3>Filter:</h3>
                <div class="row" style="margin-top:25px; border-bottom: 2px solid #f8f8f9; padding-bottom: 25px; margin-bottom: 10px;">
                    <div class="col-md-2">
                        <label>Status</label>
                        <select class="form-control" id="selectstatus" style="width:150px;" onchange="changestatus();">
                            <option value="-2">All</option>
                            <option value="-1">Open</option>
                            <option value="0">Pending</option>
                            <option value="1">Accepted</option>
                            <option value="2">Rejected</option>
                            <option value="3">Closed</option>
                        </select>
                    </div>
                </div>
                <br />
                <table class="display" id="basic-1">
                    <thead>
                        <tr>
                            <th width="10%;">#</th>
                            <th width="10%;">BidNumber</th>                            
                            <th width="15%;">Bid Date</th>
                            <th>Item Name</th>
                            <th>Unit Type</th>
                            <th>Qty</th>
                            <th>Total Bids</th>
                            <th width="15%;">Status</th>
                            <th width="15%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (BidVM bd in Model)
                            {
                                string stauscolor = "badge-warning";
                                if (bd.BidStatus == 1)
                                {
                                    stauscolor = "badge-success";
                                }
                                else if (bd.BidStatus == 2)
                                {
                                    stauscolor = "badge-danger";
                                }
                                else if (bd.BidStatus == 3)
                                {
                                    stauscolor = "badge-secondary";
                                }
                        <tr class="gradeX">
                            <td>@counter.</td>
                            <td>BD/@bd.BidYear/@bd.BidNum</td>
                            <td>@bd.BidDate.ToString("dd/MM/yyyy")</td>
                            <td>@bd.ItemName</td>
                            <td>@bd.Unittype</td>
                            <td>@bd.Qty</td>
                            <td>@bd.TotalBids</td>
                            <td><span class="badge @stauscolor" style="cursor:pointer;">@bd.Status</span></td>
                            <td>
                                <a title="View Detail" href="/admin/purchasebid/detail/@bd.BidId"><i class="fa fa-eye mr-2 font-success"></i></a>
                                <a title="Close Bid" href="javascript:void(0);" onclick="CloseBid('@bd.BidId'); "><i class="fa fa-wrench font-success"></i></a>
                                @*<a title="Edit" href="/admin/purchasebid/edit/@bd.BidId"><i class="fa fa-edit mr-2 font-success"></i></a>*@
                                @*<a title="Delete" href="javascript:void(0);" onclick="fnDeleteBid('@bd.BidId')"><i class="fa fa-trash font-danger"></i></a>*@
                            </td>
                        </tr>
                                counter++;
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

<!-- Delete Modal -->
<div class="modal fade open" id="deleteCategoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete ?
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdnDeleteCategory" />
                <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>
                <button id="btnDeleteCategory" class="btn btn-primary" type="button">Delete</button>
            </div>
        </div>
    </div>
</div>
<!-- Delete modal -->
<!-- Close Bid Modal -->
<div class="modal fade open" id="closebidModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Bid Close Confirm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to close this bid ?
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdnDeletebid" />
                <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>
                <button id="btnClosebid" class="btn btn-primary" type="button">Close Bid</button>
            </div>
        </div>
    </div>
</div>
<!-- Delete modal -->

