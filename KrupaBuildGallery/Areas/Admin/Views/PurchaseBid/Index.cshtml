    jQuery(document).on("click", "#btnClosebid", function () {

                      var Category_id = jQuery("#hdnDeletebid").val();
                        if (Category_id != "" && Category_id != null)
                        {
                            $('#closebidModal').modal('hide');

                            StartLoading();

                            var URL = '@Url.Action("CloseBid", "PurchaseBid")';
                        $.ajax({
                            type: 'POST',
                            async: true,
                            url: URL + "?BidId=" + Category_id,
                            success: function(result) {
                                    if (result == "success")
                                    {
                                        alert("Bid Closed successfully");
                                        window.location.reload();
                                    }
                                    else if (result == "notfound")
                                    {
                                        alert("Bid Not Found");
                                    }
                                    else
                                    {
                                        alert("Something went wrong. Please try again");
                                    }

                                    StopLoading();
                                },
                            error: function(resultData) {
