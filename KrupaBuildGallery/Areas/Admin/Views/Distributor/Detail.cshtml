<script>
    function invoiceprint(orderid) {
        $("#dvPrint").load('/admin/Distributor/PrintInvoice?OrderId=' + orderid, function () {
            w = window.open();
            w.document.write($("#dvPrint").html());
            setTimeout(function () {
                w.print();
                w.close();
            }, 100);
        });
    }

    function changecreditlimit(amtdue, clientuserid) {
        $("#changecreditlimitmodal").modal("show");
        $("#amountdue").val(amtdue);
        $("#clientusrid").val(clientuserid);
    }

    jQuery(document).on("click", "#savecreditlimit", function () {
        if ($("#txtcredt").val().trim() == "") {
            alert("Please Enter Credit Limit");
            return;
        }

        var amountdue = parseFloat($("#amountdue").val());
        if (parseFloat($("#txtcredt").val().trim()) < parseFloat($("#amountdue").val())) {
            alert("Amount Due is more than Credit Limit");
            return;
        }
        var URL = '/Admin/Distributor/ChangeCreditLimit';
        jQuery.ajax({
            type: 'POST',
            async: true,
            url: URL + "?ClientUserId=" + $("#clientusrid").val() + "&CreditLimit=" + $("#txtcredt").val().trim(),
            success: function (result) {
                alert("Credit Limit Changed Successfully");
                $("#changecreditlimitmodal").modal("hide");
                location.reload();
            },
            error: function (error) {
                console.log("error");
                alert(error);
                $("#changecreditlimitmodal").modal("hide");
            }
        });

    });
</script>