                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                Enter Credit Limit <input type="number" id="txtcredt" value="" />
            </div>
            <div class="modal-footer">
                <input type="hidden" id="clientusrid" value="" />
                <input type="hidden" id="amountdue" value="" />
                <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>
                <button id="savecreditlimit" class="btn btn-primary" type="button">Save</button>
            </div>
