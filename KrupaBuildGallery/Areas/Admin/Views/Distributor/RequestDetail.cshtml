<script src="~/Scripts/prism.min.js"></script>
<script src="~/Scripts/lightbox-plus-jquery.min.js"></script>
<script>
    $("input[name=optradioapprove]").click(function () {
        if ($(this).val() == "Approve") {
            $(".distributorinfo").show();
            $(".distributorinforeject").hide();
        }
        else {
            $(".distributorinforeject").show();
            $(".distributorinfo").hide();
        }
    });
    function ApproveDistributor() {
        var creditlimi = $("#txtcreditlimit").val();
        if (creditlimi == "") {
            creditlimi = "0";
        }
        var pwd = $("#txtpassword").val();
        if (pwd == "") {
            alert("Please enter password");
            return false;
        }

        var URL = '/Admin/Distributor/ApproveRejectDistributorRequest';
        $.ajax({
            type: 'POST',
            async: true,
            url: URL + "?RequestId=" + $("#requestid").val() + "&IsApprove=true&CreditLimit=" + creditlimi + "&Password=" + pwd,
            success: function (result) {
                alert("Distributor Request Approved. You can find approved distributors in distributor list");
                location.href = "/admin/distributor/requestlist";
            },
            error: function (resultData) {
                console.log("error");

            }
        });
    }

    function RejectDistributor() {
        var URL = '/Admin/Distributor/ApproveRejectDistributorRequest';
         var reason = $("#txtreason").val();
        if (reason == "") {
            alert("Please enter reason to reject");
            return false;
        }
        $.ajax({
            type: 'POST',
            async: true,
            url: URL + "?RequestId=" + $("#requestid").val() + "&IsApprove=false&Reason="+$("#txtreason").val(),
            success: function (result) {
                alert("Distributor Request Rejected!");
                location.href = "/admin/distributor/requestlist";
            },
            error: function (resultData) {
                console.log("error");

            }
        });
    }
</script>