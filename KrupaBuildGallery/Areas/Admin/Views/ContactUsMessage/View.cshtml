@using KrupaBuildGallery.Helper;
@model ContactUsMessageVM

@{
    ViewBag.Title = "View Contact Us";
}

<style>
    .labeltext {
        font-weight: bold;
        font-size: 14px;
        color: #000000;
    }

    .labelvalue {
        font-size: 14px;
        color: #000000;
        padding-left: 15px;
    }

    .profile-table table tbody tr td:first-child {
        min-width: 150px;
        font-weight: bold;
    }
</style>
<link href="~/Content/lightbox.min.css" rel="stylesheet" />

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <div class="page-header-left">
                        <h3>
                            Contact Detail - @Model.Name
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/admin/contactusmessage">Contact Message</a></li>
                        <li class="breadcrumb-item active">View</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Contact Message</h5>
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="table-responsive profile-table">
                                <table class="table table-responsive">
                                    <tbody>

                                        <tr>
                                            <td>Name:</td>
                                            <td>@Model.Name</td>
                                        </tr>
                                        <tr>
                                            <td>Mobile No:</td>
                                            <td>@Model.MobileNumber</td>
                                        </tr>
                                        <tr>
                                            <td>Email:</td>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td>Contact Date:</td>
                                            <td>@Model.MessageDate</td>
                                        </tr>
                                        <tr>
                                            <td>Message:</td>
                                            <td>@Model.Message</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>
