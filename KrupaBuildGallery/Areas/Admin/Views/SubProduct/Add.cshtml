<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Add Sub Product
                    </header>
                    <div class="panel-body">
                        <form role="form">
                            <div class="form-group">
                                <label for="selectcategory">Category</label>
                                <select id="selectcategory" class="form-control m-bot15" style="width:350px;" >
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>Option 3</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="selectproduct">Product</label>
                                <select id="selectproduct" class="form-control m-bot15" style="width:350px;" >
                                    <option>Product 1</option>
                                    <option>Product 2</option>
                                    <option>Product 3</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="txtSubProductName">Sub Product Name</label>
                                <input type="text" class="form-control" id="txtSubProductName" style="width:350px;" placeholder="Enter Sub Product Name">
                            </div>
                            <button type="submit" class="btn btn-info">Submit</button>
                        </form>
                    </div>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>
<!--main content end-->
