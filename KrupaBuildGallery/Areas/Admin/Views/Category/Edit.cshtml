@using KrupaBuildGallery.ViewModel
@model CategoryVM

@{
    ViewBag.Title = "Category";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Edit Category
                    </header>
                    <div class="panel-body">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @id = "CategoryFormId", @class = "cmxform form-horizontal", enctype = "multipart/form-data", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Category", maxlength = "200" } })
                                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                </div>

                                <div>
                                    @Html.HiddenFor(x=>x.CategoryId)
                                    <button id="btnSubmit" class="btn btn-info" type="submit">Submit</button>
                                    <a href="/admin/category/" class="btn btn-default">Cancel</a>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>
<!--main content end-->
