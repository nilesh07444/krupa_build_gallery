@using KrupaBuildGallery.Helper;
@model CategoryVM

@{
    ViewBag.Title = "Category";
}

<style>
    .labeltext {
        font-weight: bold;
        font-size: 14px;
        color: #000000;
    }

    .labelvalue {
        font-size: 14px;
        color: #000000;
        padding-left: 15px;
    }
</style>

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <div class="page-header-left">
                        <h3>
                            Category - @Model.CategoryName
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">Category</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Category</h5>
                    </div>
                    <div class="card-body">

                        <div class="form-group row">
                            <p class="col-md-12">
                                <label class="labeltext">Category Name :</label>
                                <label class="labelvalue">@Model.CategoryName</label>
                            </p>
                        </div>

                        <div class="form-group row">

                            <p class="col-md-12">
                                <label class="labeltext">Category Image :</label>
                                @if (!string.IsNullOrEmpty(Model.CategoryImage))
                                {
                                    if (File.Exists(Server.MapPath("~/Images/CategoryMedia/" + Model.CategoryImage)))
                                    {
                                        <a target="_blank" href="~/Images/CategoryMedia/@Model.CategoryImage">
                                            <img src="~/Images/CategoryMedia/@Model.CategoryImage" style="width: 50px; height: 50px;" />
                                        </a>
                                    }
                                    else
                                    {
                                        <label class="labelvalue" style="font-style: italic;">Image Not Uploaded</label>
                                    }
                                }
                                else
                                {
                                    <label class="labelvalue" style="font-style: italic;">Image Not Uploaded</label>
                                }

                            </p>
                        </div>

                        <div class="form-group row">
                            <p class="col-md-12">
                                <label class="labeltext">Created By :</label>
                                <label class="labelvalue">@Model.strCreatedBy</label>
                            </p>
                        </div>

                        <div class="form-group row">
                            <p class="col-md-12">
                                <label class="labeltext">Created Date :</label>
                                <label class="labelvalue">@CommonMethod.ConvertFromUTC(Model.CreatedDate)</label>
                            </p>
                        </div>

                        <div class="form-group row">
                            <p class="col-md-12">
                                <label class="labeltext">Modified By :</label>
                                <label class="labelvalue">@Model.strModifiedBy</label>
                            </p>
                        </div>

                        <div class="form-group row">
                            <p class="col-md-12">
                                <label class="labeltext">Modified Date :</label>
                                <label class="labelvalue">@CommonMethod.ConvertFromUTC(Model.UpdatedDate)</label>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

<script src="~/Content/assets/js/jquery-3.3.1.min.js"></script>

<script>
</script>
