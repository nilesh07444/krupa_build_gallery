@using KrupaBuildGallery.ViewModel
@model ProductVM

@{
    ViewBag.Title = "Product";
}
<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Add Product
                    </header>
                    <div class="panel-body">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("Add", "Product", FormMethod.Post, new { @id = "ProductFormId", @class = "cmxform form-horizontal", enctype = "multipart/form-data", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "" })
                                    @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.CategoryList, "Value", "Text"), "- Select Category -", new { @class = "form-control", style = "width:350px;" })
                                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", style = "width:350px;", @placeholder = "Enter Product Name", maxlength = "200" } })
                                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                </div>
                                <div>
                                    <button id="btnSubmit" class="btn btn-info" type="submit">Submit</button>
                                    <a href="/admin/product/" class="btn btn-default">Cancel</a>
                                </div>
                            }
                        </div>
                        </div>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>
