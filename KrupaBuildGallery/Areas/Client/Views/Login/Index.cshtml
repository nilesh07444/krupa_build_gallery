<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>customer's login</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">login</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="login-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3>Login</h3>
                <div class="theme-card">
                    @using (Html.BeginForm("CheckLogin", "Login", FormMethod.Post, new { ID = "theFormId", @class = "theme-form", onsubmit = "return Login();" }))
                    {
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email" required="">
                        </div>
                        <div class="form-group">
                            <label for="review">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required="">
                        </div>
                        if (TempData["LoginError"] != null)
                        {
                            <span style="color:red;" class="errorcls">@TempData["LoginError"]</span>
                        }
                        else
                        {
                            <span style="color:red;" class="errorcls"></span>
                        }
                        <br />
                        <input type="hidden" name="hdnReferer" value="@ViewBag.Referer" />
                        <input type="submit" value="Login" class="btn btn-solid" />
                    }
                </div>
            </div>
            <div class="col-lg-6 right-login">
                <h3>New Customer</h3>
                <div class="theme-card authentication-right">
                    <h6 class="title-font">Create A Account </h6>
                    @if (ViewBag.Referer == "")
                    {
                        <p>Sign up for a free account at our store. Registration is quick and easy. It allows you to be able to order from our shop. To start shopping click register.</p><a href="/register" class="btn btn-solid">Create an Account</a>
                    }
                    else
                    {
                        <p>Sign up for a free account at our store. Registration is quick and easy. It allows you to be able to order from our shop. To start shopping click register.</p><a href="/register?referer=@ViewBag.Referer" class="btn btn-solid">Create an Account</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
<script>
      function Login() {
          if ($("#email").val().trim() == "" || $("#password").val().trim() == "") {
              $(".errorcls").html("Email and Password must be required!!");                
                return false;
            }
          else {            
               StartLoading();
                return true;
            }
        }
</script>
