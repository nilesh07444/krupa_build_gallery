<script>
      $(document).ready(function () {
        $("#dob").datepicker({
            format: "dd/mm/yyyy",
            autoclose: true
        });
    });
    function checkdetails() {
        if (!ValidateEmail($("#email").val())) {
            alert("You have entered an invalid email address!")
            return false;
        }
        else {

            if ($('#hdnotptxt').val() == "") {
                 var URL = '@Url.Action("SendOTP", "DistributorRequest")';
               $.ajax({
                type: 'POST',
                async: true,
                url: URL + "?MobileNumber=" + $("#mobileno").val()+"&Email="+$("#email").val(),
                success: function (result) {
                    if (result == "InvalidNumber") {
                        alert("Mobile Number is invalid");
                        return false;
                    }
                   else if (result == "AlreadySent") {
                        alert("You have already sent a request with this email.");
                        return false;
                    }
                   else if (result == "AlreadyExist") {
                        alert("Email or Mobile is already exist.Please try with another email or mobile");
                        return false;
                    }
                    else {
                        var otps = result.split('^');
                        $('#hdnotptxt').val(otps[0]);
                        $('#hdnotpemailtxt').val(otps[1]);
                        $("#otpmodal").modal();
                    }
                },
                error: function (resultData) {
                }
            });
                return false;
            }
            else {
                StartLoading();
                return true;
            }

        }

    }

 function ValidateEmail(mail)
{
    if (/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(mail)) {
        return true;
    }
    else {
        return false;
    }
 }

    function submitotp() {
        if ($("#otptxt").val() == "" || $("#otpemiltxt").val() == "") {
            alert("Please enter otp");
            return false;
        }

        if ($("#otptxt").val() != $('#hdnotptxt').val()) {
             alert("Invalid Mobile OTP");
            return false;
        }
        if ($("#otpemiltxt").val() != $('#hdnotpemailtxt').val()) {
             alert("Invalid Email OTP");
            return false;
        }
        $("#otpmodal").modal('hide');
        $("#theFormId").submit();
    }
</script>
