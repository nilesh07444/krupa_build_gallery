
@{ 
    ViewBag.Title = "Distributor Request";
}

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>Distributor Request</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Distributor Request</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Distributor Request</h3>
                <div class="theme-card">
                    @using (Html.BeginForm("NewDistributorRequest", "DistributorRequest", FormMethod.Post, new { ID = "theFormId", @class = "theme-form", onsubmit = "return checkdetails();" }))
                    {

                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="fname">First Name *</label>
                                <input type="text" class="form-control" id="fname" name="fname" value="@TempData["firstnm"]" placeholder="First Name" required="">
                            </div>
                            <div class="col-md-6">
                                <label for="lname">Last Name *</label>
                                <input type="text" class="form-control" id="lname" name="lname" value="@TempData["lastnm"]" placeholder="Last Name" required="">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="bussinessname">Bussiness Name *</label>
                                <input type="text" class="form-control" id="bussinessname" value="@TempData["businessname"]" name="bussinessname" placeholder="Enter bussiness name" required="">
                            </div>
                            <div class="col-md-6">
                                <label for="email">email *</label>
                                <input type="email" class="form-control" id="email" name="email" value="@TempData["email"]" placeholder="Email" required="">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="mobileno">Mobile No *</label>
                                <input type="text" class="form-control" id="mobileno" name="mobileno"  value="@TempData["mobileno"]" placeholder="Enter Mobile No" required="">
                            </div>
                            <div class="col-md-6">
                                <label for="addharno">Aadhaar Card No.</label>
                                <input type="text" class="form-control" id="addharno" name="addharno"  placeholder="Aadhaar Number" >
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="city">City *</label>
                                <input type="text" class="form-control" id="city" name="city" value="@TempData["city"]" placeholder="City" required="">
                            </div>
                            <div class="col-md-6">
                                <label for="state">State *</label>
                                <input type="text" class="form-control" id="state" name="state" value="@TempData["state"]" placeholder="State" required="">
                            </div>
                            <input type="hidden" id="hdnotptxt" value="" />
                            <input type="submit" value="Submit" class="btn btn-solid" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade open" id="otpmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Distributor Request</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$('#hdnotptxt').val('');">&times;</button>
            </div>
            <div class="modal-body">
                <label>Enter OTP</label><input type="text" id="otptxt" value="" class="form-control" />
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdnDeleteProductItem" />
                <button data-dismiss="modal" class="btn btn-danger" type="button" onclick="$('#hdnotptxt').val('');">Close</button>
                <button class="btn btn-primary" type="button" onclick="submitotp();">Submit</button>
            </div>
        </div>
    </div>
</div>
<!--Section ends-->
@if (TempData["RegisterError"] != null)
{
    <script>
    setTimeout(function(){
    alert('@TempData["RegisterError"]');
    }, 1000);

</script>
}
<script>
    function checkdetails() {
        if (!ValidateEmail($("#email").val())) {
            alert("You have entered an invalid email address!")
            return false;
        }
        else {
            
            if ($('#hdnotptxt').val() == "") {
                 var URL = '@Url.Action("SendOTP", "DistributorRequest")';
               $.ajax({
                type: 'POST',
                async: true,
                url: URL + "?MobileNumber=" + $("#mobileno").val(),
                success: function (result) {
                    if (result == "InvalidNumber") {
                        alert("Mobile Number is invalid");
                        return false;
                    }
                    else {
                        $('#hdnotptxt').val(result);
                        $("#otpmodal").modal();
                    }
                },
                error: function (resultData) {                    
                }
            });
                return false;
            }
            else {
                StartLoading();
                return true;
            }
            
        }
       
    }

 function ValidateEmail(mail)
{
    if (/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(mail)) {
        return true;
    }
    else {
        return false;
    }
 }

    function submitotp() {
        if ($("#otptxt").val() == "") {
            alert("Please enter otp");
            return false;
        }

        if ($("#otptxt").val() != $('#hdnotptxt').val()) {
             alert("Invalid OTP");
            return false;
        }
        $("#theFormId").submit();
    }
    </script>
